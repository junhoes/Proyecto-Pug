include ../fragments/selector
include ../components/input_text
include ../fragments/date_input
include ../components/checkbox
mixin filtros(facturas)
    .opcionesTabla
        .opcionesTabla--ordenar
            .opcionesTabla--selector
                +selector([
                    {
                    name: 'mayormenor',
                    labelText: 'Ordenar por: ',
                    placeholder: 'Mayor importe',
                    options: [
                        ['mayorImporte', 'Mayor importe'],
                        ['menorImporte', 'Menor importe'],
                    ]
                    }   
                ])
            p.numFacturas #{facturas} facturas
        .opcionesTabla--abrirFiltros
            button.abrirFiltros(onclick='apareceFiltros("menuFiltros")')
                img(src="../images/filter.png", alt="filter icon")
                p Filtros
    .menuFiltros 
        .menuFiltros--header   
            p Filtros
            button.cerrarFiltros(onclick='apareceFiltros("menuFiltros")')
                img(src="../images/close.png", alt="close icon")
        .menuFiltros--opciones
            .selector--poliza
                +selector([
                    {
                        name: 'numPoliza',
                        labelText: 'No. de p칩liza',
                        placeholder: 'Todas las p칩lizas',
                        options: [
                            ['totalPolizas', 'Todas las p칩lizas'],
                            ['num1', '75846843']
                        ]
                    }
                ])
            +input_text('Nombre del riesgo', 'Introduce el nombre del riesgo', 'nameRiesgo')

            +date_input('Fecha de validez')

            +input_text('Importe', 'Introduzca importe', 'importeRiesgo')

            .selector--estado 
                +selector([
                    {
                        name: 'estadoRiesgo',
                        labelText: 'Estado',
                        placeholder: 'Todos los estados',
                        options: [
                            ['totalEstados', 'Todos los estados'],
                            ['pendiente', 'Pendiente'],
                            ['pagado', 'Pagada'],
                            ['vencido', 'Vencido']
                        ]
                    }
                ])

